<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Window.World"
             Title="World">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

        <Image
            Source="world01.png"
            HeightRequest="200"
            HorizontalOptions="Center" />
        <Label
            Text="You are in the World. Before you is a man, standing by himself against a crumbling stone wall."
            FontSize="Title" />
        <Label
            Text="What would you like to do?" />
        <Button
            Text="Talk to the Merchant"
            Clicked="talkMerchant"
            x:Name="talkmerch"/>
        <Button
            Text="Fight the Merchant"
            Clicked="fightMerchant"
            x:Name="fightmerch"/>
        <Button
            Text="Go forth"
            Clicked="goForth" 
            x:Name="goforth"
            IsVisible="false"/>
        <Button
            Text="Go Back"
            Clicked="OnGoBackClicked" />
    </VerticalStackLayout>
</ContentPage>