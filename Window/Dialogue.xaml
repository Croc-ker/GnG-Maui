<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Window.Dialogue"
             Title="Dialogue"
             xmlns:viewmodel="clr-namespace:GG.Conversation;assembly=GG"
             x:DataType="viewmodel:Branch"
             >
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />
        <Label
            Text="{Binding CurrentText}"
            />
        <ListView x:Name="playerOptionsListView"
                  ItemsSource="{Binding PlayerText}"
                  SelectedItem="{Binding SelectedPlayerText, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Button Text="{Binding}" Command="{Binding Source={x:Reference playerOptionsListView}, Path=BindingContext.SelectOptionCommand}" CommandParameter="{Binding .}" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>